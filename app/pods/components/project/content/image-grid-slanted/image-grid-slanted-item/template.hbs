<div class="image-grid-slanted-item">
  <div class="image-grid-slanted-item__image">
    <Ui::IsCurrentlyVisible as |isCurrentlyVisible|>
      <Ui::LazyImage
        @alt={{@alt}}
        @isCurrentlyVisible={{isCurrentlyVisible}}
        @shouldImageCover={{true}}
        @role={{@role}}
        @srcSet={{@srcSet}}
      />
    </Ui::IsCurrentlyVisible>
  </div>
</div>
