{{#if this.placeholderSrc}}
  <img
    alt=""
    class="js__lazy-placeholder {{bem "lazy-image__placeholder" placeholderError=hasErroredPlaceholder}}"
    src={{this.placeholderSrc}}
  />
{{/if}}

<img
  alt={{@alt}}
  class="{{@className}} js__lazy-main {{bem "lazy-image__main" loaded=hasLoaded hasPlaceholder=hasPlaceholder}}"
  src={{this.offsetSrc}}
  srcset={{this.offsetSrcSet}}
  sizes={{this.offsetSizes}}
/>
/>
