{{#if (and this.placeholderSrc (not this.hasErroredPlaceholder))}}
  <img
    alt=""
    class="
      js__lazy-placeholder
      {{bem
        "lazy-image__placeholder"
        placeholderError=@hasErroredPlaceholder
        shouldImageCover=@shouldImageCover
      }}
    "
    role="presentation"
    src={{this.placeholderSrc}}
  />
{{/if}}

<img
  alt={{@alt}}
  class="
    {{@className}}
    js__lazy-main
    {{bem
      "lazy-image__main"
      loaded=this.hasLoaded
      hasPlaceholder=this.hasPlaceholder
      shouldImageCover=@shouldImageCover
    }}
  "
  role={{@role}}
  src={{if (or this.isCurrentlyVisible this.forceCurrentlyVisible) this.offsetSrc ''}}
  srcset={{if (or this.isCurrentlyVisible this.forceCurrentlyVisible) this.offsetSrcSet ''}}
  sizes={{if (or this.isCurrentlyVisible this.forceCurrentlyVisible) this.offsetSizes ''}}
/>
