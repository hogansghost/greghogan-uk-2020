<Layout::PageSections::PageWrapper @upperMargin={{true}}>
  <Layout::PageSections::PageWrapper::PageWrapperSection>
    <Layout::HeroBanner
      @author={{@model.author}}
      @backgroundSrcSet={{this.projectList.lastObject.thumbnail.srcSet}}
      @project={{@model.project}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>

  <Layout::PageSections::PageWrapper::PageWrapperSection
    @hasOverlap={{true}}
  >
    <AboutMe
      @author={{@model.author}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>


  <Layout::PageSections::PageWrapper::PageWrapperSection
    @gutterVerticalTopOnly={{true}}
  >
    <Example::ExampleGrid
      @heading="Code and CSS snippets"
      @examples={{@model.example.codepen}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>


  <Layout::PageSections::PageWrapper::PageWrapperSection
    @gutterVertical="none"
  >
    <Ui::IsCurrentlyVisible as |isCurrentlyVisible|>
      <Layout::PageSections::PageSectionStickyTitle
        @isCurrentlyVisible={{isCurrentlyVisible}}
        @title="Projects"
        @titlePosition="right"
        @titleTheme="primary"
        @onEntryToViewport={{fn this.sendGoogleEvent "Scrolled - Home - Projects"}}
      >
        <Project::ProjectLinkList
          @projects={{this.projectList}}
        />
      </Layout::PageSections::PageSectionStickyTitle>
    </Ui::IsCurrentlyVisible>

    <Ui::IsCurrentlyVisible as |isCurrentlyVisible|>
      <Layout::PageSections::PageSectionStickyTitle
        @isCurrentlyVisible={{isCurrentlyVisible}}
        @title="Contact"
        @titlePosition="left"
        @titleTheme="secondary"
        @onEntryToViewport={{fn this.sendGoogleEvent "Scrolled - Home - Contact"}}
      >
        <ContactMe
          @description={{@model.author.contactDescription}}
          @links={{@model.author.profileLinks}}
        />
      </Layout::PageSections::PageSectionStickyTitle>
    </Ui::IsCurrentlyVisible>
  </Layout::PageSections::PageWrapper::PageWrapperSection>
</Layout::PageSections::PageWrapper>
