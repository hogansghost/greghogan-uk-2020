<Layout::PageSections::PageWrapper @upperMargin={{true}}>
  <Layout::PageSections::PageWrapper::PageWrapperSection>
    <Layout::HeroBanner
      @author={{@model.author}}
      @backgroundSrcSet={{this.projectList.lastObject.thumbnail.srcSet}}
      @project={{@model.project}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>

  <Layout::PageSections::PageWrapper::PageWrapperSection
    @hasOverlap={{true}}
  >
    <AboutMe
      @author={{@model.author}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>


  <Layout::PageSections::PageWrapper::PageWrapperSection
    @gutterVerticalTopOnly={{true}}
  >
    <Example::ExampleGrid
      @heading="Code and CSS snippets"
      @examples={{@model.example.codepen}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>


  <Layout::PageSections::PageWrapper::PageWrapperSection
    @gutterVertical="none"
  >
    <Layout::PageSections::PageSectionStickyTitle
      @title="Projects"
      @titlePosition="right"
      @titleTheme="primary"
      @onEntryToViewport={{action "sendGoogleEvent" "message"}}
    >
      {{#each this.projectList as |project|}}
        <Project::ProjectLink
          @srcSet={{project.thumbnail.srcSet}}
          @sizes={{project.thumbnail.sizes}}
          @name={{project.name}}
          @role={{project.role}}
          @id={{project.id}}
          @url={{project.url}}
        />
      {{/each}}
    </Layout::PageSections::PageSectionStickyTitle>

    <Layout::PageSections::PageSectionStickyTitle
      @title="Contact"
      @titlePosition="left"
      @titleTheme="secondary"
    >
      <ContactMe
        @description={{@model.author.contactDescription}}
        @links={{@model.author.profileLinks}}
      />
    </Layout::PageSections::PageSectionStickyTitle>
  </Layout::PageSections::PageWrapper::PageWrapperSection>
</Layout::PageSections::PageWrapper>
