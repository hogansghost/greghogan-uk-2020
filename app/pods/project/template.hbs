<Ui::LinkToHome />

<Layout::PageSections::PageWrapper @upperMargin={{true}}>
  <Layout::PageSections::PageWrapper::PageWrapperSection>
    <Project::HeroVideoBanner
      @projectLink={{model.url}}
      @projectRole={{model.role}}
      @projectTimeframe={{model.timeframe}}
      @projectTitle={{model.name}}
      @projectVideo={{model.projectContents.projectVideo.videoSrcSet}}
      @projectVideoPlaceholder={{model.projectContents.projectVideo.thumbnailSrcSet}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>

  <Layout::PageSections::PageWrapper::PageWrapperSection @hasOverlap={{true}}>
    <Project::Content::ProjectDetails
      @projectLink={{model.url}}
      @projectRole={{model.role}}
      @projectTimeframe={{model.timeframe}}
      @projectTitle={{model.name}}
    />
  </Layout::PageSections::PageWrapper::PageWrapperSection>

  <Layout::PageSections::PageWrapper::PageWrapperSection>
    <Project::Content::ProjectContent @content={{model.projectContents}} />
  </Layout::PageSections::PageWrapper::PageWrapperSection>
</Layout::PageSections::PageWrapper>
